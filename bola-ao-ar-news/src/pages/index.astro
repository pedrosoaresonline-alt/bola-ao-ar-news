---
import Base from "../layouts/Base.astro";
---
<Base title="Bola ao Ar News — Início">
  <section id="destaques">
    <h2 class="text-2xl font-extrabold tracking-tight mb-4">Destaques</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
      {[1,2,3,4,5,6].map(n => (
        <article class="group bg-white rounded-2xl shadow hover:shadow-lg transition overflow-hidden">
          <div class="aspect-video bg-gradient-to-br from-orange-100 to-amber-100"></div>
          <div class="p-4">
            <h3 class="font-semibold group-hover:text-orange-600 transition">Título de destaque #{n}</h3>
            <p class="text-sm text-zinc-600 mt-1">Resumo curto da notícia.</p>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section id="ultimas" class="mt-10">
    <h2 class="text-2xl font-extrabold tracking-tight mb-4">Últimas</h2>
    <div class="bg-white rounded-xl shadow p-4">Feed em breve…</div>
  </section>
</Base>
