---import "../styles/global.css";
const {
  title = "Bola ao Ar News",
  description = "Tudo sobre basquetebol, dentro e fora de campo",
} = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<html lang="pt">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body style="font-family:system-ui;margin:0;background:#f5f5f5;color:#111">
    <Header />

    <!-- NAV EMBUTIDO -->
    <nav style="background:#f97316;color:#fff;font-weight:600">
      <div style="max-width:960px;margin:0 auto;padding:10px 16px;display:flex;gap:16px;flex-wrap:wrap">
        <a href="/" style="color:#fff;text-decoration:none">Início</a>
        <a href="/competicoes" style="color:#fff;text-decoration:none">Competições</a>
        <a href="/jogadores" style="color:#fff;text-decoration:none">Jogadores</a>
        <a href="/estatisticas" style="color:#fff;text-decoration:none">Estatísticas</a>
        <a href="/multimedia" style="color:#fff;text-decoration:none">Multimédia</a>
        <a href="/comunidade" style="color:#fff;text-decoration:none">Comunidade</a>
      </div>
    </nav>
    <!-- /NAV -->

    <main style="max-width:960px;margin:24px auto;padding:0 16px">
      <slot />
    </main>
    <Footer />
  </body>
</html>
